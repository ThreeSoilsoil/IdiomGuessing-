<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B4355"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TextView_Idiomname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/TextView_explanation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Button_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#CCB87E"
                android:text="删除"
                android:textColor="#553609" />

            <Button
                android:id="@+id/Button_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#E4DB86"
                android:text="更新"
                android:textColor="#5A3D12" />

            <Button
                android:id="@+id/Button_collection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#3A4004"
                android:text="收藏"
                android:textColor="#FFC107" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_detailct"
            android:layout_width="150dp"
            android:layout_height="250dp"
            android:layout_weight="1"
            tools:srcCompat="@tools:sample/avatars" />

        <Button
            android:id="@+id/Button_choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择图片" />
    </LinearLayout>

</LinearLayout>