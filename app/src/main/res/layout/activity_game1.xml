<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00BCD4"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView_idiom"
        android:layout_width="match_parent"
        android:layout_height="229dp"
        android:background="#F6EBCB"
        app:srcCompat="@drawable/sicnu" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_Prompt"
                android:layout_width="31dp"
                android:layout_height="59dp"
                android:layout_weight="1"
                android:text="提示" />

            <TextView
                android:id="@+id/textView_promptprice"
                android:layout_width="87dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="铜钱"
                android:textAlignment="center"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:verticalScrollbarPosition="defaultPosition">

            <TextView
                android:id="@+id/textView_reCopper"
                android:layout_width="77dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="铜钱"
                android:textAlignment="center"
                android:textSize="16sp" />

            <Button
                android:id="@+id/button_hcopper2"
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/ic_baseline_attach_money_24"
                android:backgroundTint="#FBC00F" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:textAlignment="center">

        <TextView
            android:id="@+id/textView_one"
            android:layout_width="31dp"
            android:layout_height="59dp"
            android:layout_weight="1"
            android:background="@drawable/shapeblue"
            android:textAlignment="center"
            android:textColor="#41EA48"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView_two"
            android:layout_width="31dp"
            android:layout_height="59dp"
            android:layout_weight="1"
            android:background="@drawable/shape"
            android:textAlignment="center"
            android:textColor="#4CAF50"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView_three"
            android:layout_width="31dp"
            android:layout_height="59dp"
            android:layout_weight="1"
            android:background="@drawable/shape"
            android:textAlignment="center"
            android:textColor="#4CAF50"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView_four"
            android:layout_width="31dp"
            android:layout_height="59dp"
            android:layout_weight="1"
            android:background="@drawable/shape"
            android:textAlignment="center"
            android:textColor="#4CAF50"
            android:textSize="24sp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recylerView1"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_weight="1"
        android:background="#EFE1B7"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:textAlignment="center">

        <TextView
            android:id="@+id/score"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="成绩："
            android:textColor="#0000FF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_changeidiom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="下一关" />
    </LinearLayout>


</LinearLayout>